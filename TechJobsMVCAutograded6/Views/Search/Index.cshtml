<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == "all"" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @* TODO #4 - Loop over the search results to display all job fields. *@
    @if (ViewBag.jobs != null && ViewBag.jobs.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Employer</th>
                    <th>Location</th>
                    <th>Position Type</th>
                    <th>Core Competency</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in ViewBag.jobs)
                {
                    <tr>
                        <td>@job.Name</td>
                        <td>@job.Employer.Value</td>
                        <td>@job.Location.Value</td>
                        <td>@job.PositionType.Value</td>
                        <td>@job.CoreCompetency.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No results found.</p>
    }

</div>
